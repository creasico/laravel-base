{
    "name": "creasi/laravel-base",
    "description": "Accounts Management Package",
    "keywords": ["laravel", "accounts", "package"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Creasi Developers",
            "email": "developers@creasi.co"
        }
    ],
    "support": {
        "source": "https://github.com/creasico/laravel-base"
    },
    "scripts": {
        "fix": [
            "pint --preset laravel"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always --coverage-text"
        ]
    },
    "autoload": {
        "psr-4": {
            "Creasi\\Base\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Creasi\\Tests\\": "tests",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "require": {
        "php": "^8.1",
        "creasi/laravel-nusa": "^0.0.5",
        "illuminate/contracts": "^10.0",
        "illuminate/database": "^10.0",
        "illuminate/support": "^10.0"
    },
    "require-dev": {
        "composer-runtime-api": "*",
        "laravel/pint": "^1.1",
        "mockery/mockery": "^1.5",
        "orchestra/testbench": "^8.5",
        "phpunit/phpunit": "^10.1"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Creasi\\Laravel\\Accounts\\ServiceProvider"
            ],
            "aliases": {
                "Accounts": "Creasi\\Laravel\\Accounts"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
