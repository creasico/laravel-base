{
    "name": "creasi/laravel-account",
    "description": "Account Management Package",
    "keywords": ["laravel", "account", "package"],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Creasi Developers",
            "email": "developers@creasi.co"
        }
    ],
    "support": {
        "source": "https://github.com/creasico/laravel-account"
    },
    "scripts": {
        "fix": [
            "pint --preset laravel"
        ],
        "test": [
            "vendor/bin/phpunit --colors=always"
        ]
    },
    "autoload": {
        "psr-4": {
            "Creasi\\Laravel\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Creasi\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^8.0|^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.1",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^7.5",
        "phpunit/phpunit": "^9.5"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Creasi\\Laravel\\Account\\ServiceProvider"
            ],
            "aliases": {
                "Account": "Creasi\\Laravel\\Facades\\Account"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
